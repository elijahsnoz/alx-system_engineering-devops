#!/bin/bash

# Update package list and install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Start Nginx service
sudo service nginx start

# Allow Nginx on firewall
sudo ufw allow 'Nginx HTTP'

# Give the user ownership to website files for easy editing
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www

# Backup default index
cp /var/www/html/index.nginx-debian.html /var/www/html/index.nginx-debian.html.bckp

# Create a custom 404 page
echo -e "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Modify Nginx default configuration to use the custom 404 page
sudo sed -i '/server_name _;/a \ \n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\tinternal;\n\t}\n' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart

# Verify if the Nginx configuration is correct
if sudo nginx -t; then
    echo -e "\nNginx configuration is correct. ✅\n"
else
    echo -e "\nNginx configuration has errors. ❌\n"
    sudo nginx -t
    exit 1
fi

# Display the Nginx status
sudo service nginx status

# Display the Nginx configuration file for verification
echo -e "\nNginx configuration file content:\n"
sudo cat /etc/nginx/sites-available/default

# Display the last 20 lines of the Nginx error log for debugging
echo -e "\nNginx error log:\n"
sudo tail -n 20 /var/log/nginx/error.log

