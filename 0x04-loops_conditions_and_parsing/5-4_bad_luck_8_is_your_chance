#!/usr/bin/env bash
# This script displays different messages based on loop iteration

# Initialize a counter
counter=1

# Loop from 1 to 10
while [ $counter -le 10 ]; do
    # Check for special cases
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((counter++))
done

