#!/usr/bin/env bash
# This script displays "Best School" 10 times, with a special case on the 9th iteration

# Initialize a counter
counter=0

# Loop until the counter reaches 10
while [ $counter -lt 10 ]; do
    # Check if it's the 9th iteration
    if [ $counter -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    ((counter++))
done

